---
import { Image } from "astro:assets";
import Logo from "/src/assets/img/Rechner-Icon.png";
import vercelLogo from "/src/assets/img/vercel-logotype-light.svg";
---

<!-- Footer -->
<footer class="bg-gray-900">
  <div
    class="container mx-auto flex flex-col-reverse items-center justify-between space-y-6 space-y-reverse p-6 text-center md:flex-row md:items-start md:space-y-0 md:text-left"
  >
    <!-- Logo und Version -->
    <div class="justify-between space-y-6 md:items-start">
      <div>
        <Image
          src={Logo}
          alt="Durchschnittsrechner-Logo"
          class="h-20"
          width={80}
        />
      </div>
      <div>
        <p class="text-lg font-bold text-white">v4.3.2</p>
      </div>
    </div>
    <!-- Links -->
    <div class="flex flex-col justify-around text-white">
      <a href="/" class="hover:text-gray-300">Home</a>
      <a
        href="https://github.com/glifede/durchschnittsrechner"
        class="hover:text-gray-300">GitHub</a
      >
      <a href="/changelog" class="hover:text-gray-300">Changelog</a>
    </div>
    <div class="flex flex-col justify-around text-white">
      <a href="/impressum" class="hover:text-gray-300">Impressum</a>
      <a href="/datenschutzerklaerung" class="hover:text-gray-300"
        >Datenschutzerklärung</a
      >
    </div>
    <!-- Copyright -->
    <div class="inset-x-0 bottom-0 flex flex-col text-white">
      <p>Made with ♥️ by GLifeDE</p><span
        class="flex flex-row justify-center space-x-2 md:justify-normal"
      >
        <p>Powered by</p>
        <Image src={vercelLogo} alt="vercel-logo" width={60} height={20} />
      </span>
    </div>
  </div>
</footer>
